<%= simple_nested_form_for(@masterpiece, multipart: true) do |f| %>
  <% if @masterpiece.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@masterpiece.errors.count, "error") %> prohibited this masterpiece from being saved:</h2>

      <ul>
      <% @masterpiece.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.hidden_field :recipe_id, value: @recipe_id %>
    <%= f.hidden_field :user_id, value: @user_id %>
  </div>
  <div class="field">
    <%= f.input :description, label: 'Description', placeholder: 'Enter masterpiece description', input_html: { rows: 8 } %>
  </div>
  <div class="field">
    <%= f.input :masterpiece_img, as: :masterpiece_img, label:'Masterpiece Picture' %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-warning "%>
  </div>
<% end %>
