<div class="row">
  <div class="col-md-6">
    <ul class="nav nav-pills">
      <li <%= raw 'class="active"' if type == 'recipe' %>><a href="#pill1" data-toggle="tab">Recipe</a></li>
      <li <%= raw 'class="active"' if type == 'user' %>><a href="#pill2" data-toggle="tab">User</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade <%= 'in active' if  type == 'recipe' %>" id="pill1">
        <%= form_tag(search_find_by_recipe_path, method: "get", class: "navbar-form navbar-left") do %>
        <div class="form-group">
          <%= text_field_tag :search, nil, class: "form-control", placeholder: "Search recipe" %>
          <%= submit_tag "Search", class: 'form-control' %>
        </div>
        <% end %>
      </div>
      <div class="tab-pane fade <%= 'in active' if  type == 'user' %>" id="pill2">
        <%= form_tag(search_find_by_user_path, method: "get", class: "navbar-form navbar-left") do %>
        <div class="form-group">
          <%= text_field_tag :search, nil, class: "form-control", placeholder: "Search user" %>
          <%= submit_tag "Search", class: 'form-control' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>