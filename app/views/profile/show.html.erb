<div class="jumbotron">
  <h2 class="text-left"><%= @user.username %></h2>
  <p><%= image_tag @user.avatar.url(:square) %></p>
  <p>Email: <%= @user.email %></p>
  <p>Joined since <%= @user.created_at.strftime("%b %d, %Y") %></p>
  <% if current_user == @user %>
  <%= link_to 'Edit', edit_user_registration_path, class: "btn btn-default"%>
  <% end %>
</div>

<div>
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab"><b><%= @created_recipes.count %></b> created recipes</a></li>
    <li><a href="#tab2" data-toggle="tab"><b><%= @bookmarked_recipes.count %></b> bookmarked recipes</a></li>
    <li><a href="#tab3" data-toggle="tab"><b><%= @liked_recipes.count %></b> liked recipes</a></li>
    <li><a href="#tab4" data-toggle="tab"><b><%= @cooked_masterpieces.count %></b> cooked masterpieces</a></li>
    <li><a href="#tab5" data-toggle="tab"><b><%= @liked_masterpieces.count %></b> liked masterpieces</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane fade in active" id="tab1">
      <ul class="media-list">
        <% @created_recipes.each do |recipe| %>
          <li class="media">
            <a class="pull-left">
              <img class="media-object" src="<%= recipe.recipe_img.url(:thumb) %>">
            </a>
            <div class="media-body">
              <h4 class="media-heading"><span class="recipe-link"><%= link_to recipe.title, recipe %></span></h4>
              <p><%= recipe.description %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="tab-pane fade" id="tab2">
      <ul class="media-list">
        <% @bookmarked_recipes.each do |recipe| %>
          <li class="media">
            <a class="pull-left">
              <img class="media-object" src="<%= recipe.recipe_img.url(:thumb) %>">
            </a>
            <div class="media-body">
              <h4 class="media-heading"><span class="recipe-link"><%= link_to recipe.title, recipe %></span></h4>
              <p><%= recipe.description %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="tab-pane fade" id="tab3">
      <ul class="media-list">
        <% @liked_recipes.each do |recipe| %>
          <li class="media">
            <a class="pull-left">
              <img class="media-object" src="<%= recipe.recipe_img.url(:thumb) %>">
            </a>
            <div class="media-body">
              <h4 class="media-heading"><span class="recipe-link"><%= link_to recipe.title, recipe %></span></h4>
              <p><%= recipe.description %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="tab-pane fade" id="tab4">
      <ul class="media-list">
        <% @cooked_masterpieces.each do |masterpiece| %>
          <li class="media">
            <a class="pull-left">
              <img class="media-object" src="<%= masterpiece.masterpiece_img.url(:thumb) %>">
            </a>
            <div class="media-body">
              <h4 class="media-heading"><span class="masterpiece-link"><%= link_to masterpiece.recipe.title, masterpiece %></span></h4>
              <p><%= masterpiece.description %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="tab-pane fade" id="tab5">
      <ul class="media-list">
        <% @liked_masterpieces.each do |masterpiece| %>
          <li class="media">
            <a class="pull-left">
              <img class="media-object" src="<%= masterpiece.masterpiece_img.url(:thumb) %>">
            </a>
            <div class="media-body">
              <h4 class="media-heading"><span class="masterpiece-link"><%= link_to masterpiece.recipe.title, masterpiece %></span></h4>
              <p><%= masterpiece.description %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>

