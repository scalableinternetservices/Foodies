<div class="jumbotron">
  <h2 class="text-left"><%= current_user.username %></h2>
  <p><%= image_tag current_user.avatar.url(:square) %></p>
  <p><a href="#" class="btn btn-info">Facebook</a>  <a href="#" class="btn btn-info">Twitter</a></p>
  <p>Location: </p>
  <p>About me: </p>
</div>

<div>
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">created_recipes</a></li>
    <li><a href="#tab2" data-toggle="tab">bookmarked_recipes</a></li>
    <li><a href="#tab3" data-toggle="tab">liked_recipes</a></li>
