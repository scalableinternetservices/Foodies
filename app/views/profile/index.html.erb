  <div class="tab-content">
    <div class="tab-pane fade in active" id="tab1">
      <ul class="media-list">
        <% @created_recipes.each do |recipe| %>
          <li class="media">
            <a class="pull-left">
              <img class="media-object" src=<%= recipe.recipe_img.url(:thumb) %>>
            </a>
            <div class="media-body">
              <h4 class="media-heading"><%= link_to recipe.title, recipe %></h4>
              <p><%= recipe.description %></p>
            </div>
          </li>
        <% end %>
