<% cache('sign-up') do %>
<div class="form-signin">
  <h3 class="form-signin-heading">Please sign up</h3>
  <%= devise_error_messages! %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, class: "form-control" %>
      <%= f.input :username, required: true, class: "form-control" %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
<% end %>
