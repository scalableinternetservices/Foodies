  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at homepage -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit recipe 1 as a user could do  -->
      <request>
        <http url='/recipes/1' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at recipe -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit masterpiece 1 as a user could do  -->
      <request>
        <http url='/masterpieces/1' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at masterpiece-->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a current user id -->
     <setdynvars sourcetype="random_number" start="1" end="5">
       <var name="current_user_id" />
     </setdynvars>

     <!-- create a random number to make a random recipe name-->
    <setdynvars sourcetype="random_number" start="1" end="5">
      <var name="random_recipe_name" />
    </setdynvars>



     <setdynvars sourcetype="eval"
            code='fun({Pid,DynVars})-> [[13, 10]] end.'>
        <var name="nl" />
      </setdynvars>

     <setdynvars sourcetype="eval"
            code='fun({Pid,DynVars})->
                    {ok, Bin} = file:read_file("sample.png"),
                    Bin
                  end.'>
        <var name="attached_file" />
      </setdynvars>

      <!-- visit the New recipe form, as a user would do.  -->
      <request>
        <http url='/recipes/new' version='1.1' method='GET'></http>
      </request>

      <request subst="true">
        <http
          url='/recipes'
          version='1.1'
          method='POST'
          content_type='multipart/form-data; boundary=----FormBoundary'
          contents='------FormBoundary%%_nl%%Content-Disposition: form-data; name="recipe[user_id]"%%_nl%%%%_nl%%%%_current_user_id%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="recipe[title]"%%_nl%%%%_nl%%Recipe_name%%_random_recipe_name%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Create Recipe%%_nl%%------FormBoundary--%%_nl%%%%_nl%%'>
      </http>
      </request>
    </session>
  </sessions>
</tsung>
